[merge]
	tool = gvimdiff
	; tool = mvimdiff
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	co = checkout
	sw = checkout
	revertfile = checkout
	branch-new-and-switch = checkout -b
	br = branch
	branch-delete = branch -d
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
[core]
	excludesfile = ~/.gitignore
